{
  "name": "secrets-vars-to-env-file-action",
  "version": "1.4.1",
  "description": "Export GitHub secrets & vars to environment variables & specified file",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest --testPathIgnorePatterns test/e2e --watchAll",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest --testPathPatterns='test/e2e/.*\\.test\\.ts'",
    "build": "tsc",
    "package": "ncc build --source-map --license licenses.txt",
    "prepare:release": "rimraf build && pnpm run build && pnpm run package",
    "lint": "eslint .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts)\"",
    "update:all": "corepack up && pnpm update"
  },
  "author": "Jakub Cie≈õlik",
  "license": "MIT",
  "packageManager": "pnpm@10.16.1+sha512.0e155aa2629db8672b49e8475da6226aa4bdea85fdcdfdc15350874946d4f3c91faaf64cbdc4a5d1ab8002f473d5c3fcedcd197989cf0390f9badd3c04678706",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
